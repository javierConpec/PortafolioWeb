---
import "../styles/global.css";
import Header from "../components/headerComponent.astro";
import Galaxy from "../styles/animated/Galaxy.tsx";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Mi Portafolio</title>
  </head>
  <body class="bg-black text-gray-900 min-h-screen relative overflow-hidden">
    <Header />

    <!-- Fondo Galaxy -->
    <div class="absolute inset-0 -z-10 w-full h-full">
      <Galaxy client:load 
    density={1}
    glowIntensity={0.2}
    saturation={0.2}
    hueShift={500}
      />
    </div>

    <!-- Contenido principal -->
    <main class="relative z-10 p-6 flex items-center justify-center min-h-screen">
      <slot />
    </main>
  </body>
</html>
